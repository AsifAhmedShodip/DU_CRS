<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omi.du_crs.SearchActivity"
    android:padding="5dp"
    >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Enter Search category"
        android:id="@+id/search_category"/>
    <EditText
        android:layout_below="@id/search_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="start time"
        android:id="@+id/stb"
        />

    <EditText
        android:layout_below="@id/stb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="end time"
        android:id="@+id/etb"/>

    <EditText
        android:layout_below="@id/etb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="start date"
        android:id="@+id/sdb"/>

    <EditText
        android:layout_below="@id/sdb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="end date"
        android:id="@+id/edb"
        android:layout_alignParentRight="true"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Enter audotorioum/ground"
        android:id="@+id/auditorioum"
        android:layout_below="@id/edb"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Enter Department"
        android:id="@+id/deptName"
        android:layout_below="@id/auditorioum"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="Enter Department"
            android:id="@+id/Ground"
            android:layout_below="@id/deptName"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="Enter Department"
            android:id="@+id/ExamHall"
            android:layout_below="@id/Ground"/>


        <EditText
        android:layout_below="@id/ExamHall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room no"
        android:id="@+id/room_no"
        android:layout_alignParentRight="true"/>
        <EditText
            android:layout_below="@id/room_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Student"
            android:id="@+id/count_no"
            android:layout_alignParentRight="true"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/count_no"
            android:id="@+id/hall_choice">

        </Spinner>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hall_choice"
        android:layout_alignParentRight="true"
        android:text="Search"
        android:id="@+id/searchb"/>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
