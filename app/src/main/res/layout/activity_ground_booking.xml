<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rafi.du_crs.ground_booking">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="#ffffff"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_title_select_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:text="Search Type"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="10sp" />
                <Spinner
                    android:id="@+id/spinner_select_type"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/textinput_2"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:spinnerMode="dialog"
                    android:textColor="#000000"
                    android:textSize="25sp">
                </Spinner>


                <TextView
                    android:id="@+id/tv_title_select_ground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:text="Select Ground"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="10sp" />
                <Spinner
                    android:id="@+id/spinner_select_ground"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/textinput_2"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:spinnerMode="dialog"
                    android:textColor="#000000"
                    android:textSize="25sp">
                </Spinner>

                <TextView
                    android:id="@+id/tv_title_stime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:text="Start Time"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tv_stime"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/textinput_2"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="Start Time"
                    android:maxLines="1"
                    android:spinnerMode="dialog"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_title_etime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:text="End Time"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tv_etime"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/textinput_2"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="End Time"
                    android:maxLines="1"
                    android:spinnerMode="dialog"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_title_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:text="Date"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/textinput_2"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="Date"
                    android:maxLines="1"
                    android:spinnerMode="dialog"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/bt_check"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/select_start"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/textinput"
                    android:gravity="center"
                    android:text="Check" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:visibility="visible"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_result"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:text=""
                    android:textColor="#000000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_book"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/textinput"
                    android:gravity="center"
                    android:text="Book" />


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
