<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"

    app:cardBackgroundColor="#ff6128">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#EEEEEF"
        android:padding="@dimen/fab_margin">
        <RelativeLayout
            android:id="@+id/calendere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cal"

            />
            <TextView
                android:id="@+id/datee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="29"
                android:textColor="#000000"
                android:textSize="25dp"
                />
            <TextView
                android:id="@+id/monthe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/datee"
                android:layout_centerHorizontal="true"
                android:text="November"
                android:textColor="#000000"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/calendere"
            android:padding="@dimen/fab_margin"

            >
            <TextView
                android:id="@+id/slote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slot:11.30AM - 2:30PM"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/sube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slote"
                android:text="SUbject: CSE-2201"
                android:textColor="#000000">

            </TextView>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/sube"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:text="SUbject: CSE-2201"
                android:textColor="#000000">

            </TextView>

        </RelativeLayout>
        <Button
            android:id="@+id/cancelb"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/info"
            android:layout_marginTop="10dp"

            android:background="@drawable/cancel512"

            />




    </RelativeLayout>

</android.support.v7.widget.CardView>
