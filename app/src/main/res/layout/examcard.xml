<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    app:cardBackgroundColor="#ff6128"

    android:layout_margin="@dimen/fab_margin">
    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:background="#EEEEEF">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendere"
            android:layout_centerVertical="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"

            />
            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:id="@+id/datee"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="November"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/datee"
                android:id="@+id/monthe"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/calendere"
            android:id="@+id/info"
            android:padding="@dimen/fab_margin"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slot:11.30AM - 2:30PM"
                android:id="@+id/slote"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUbject: CSE-2201"
                android:id="@+id/sube"
                android:layout_below="@id/slote">

            </TextView>

        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:id="@+id/cancelb"
            android:text="Cancel"
            />



    </RelativeLayout>

</android.support.v7.widget.CardView>
