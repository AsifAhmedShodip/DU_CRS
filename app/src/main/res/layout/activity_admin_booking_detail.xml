<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.example.rafi.du_crs.admin_booking_detail">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/tv_location_name"
                android:textStyle="bold"
                android:textSize="27dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/tv_location_name"
                android:id="@+id/tv_event_name"
                android:textSize="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/tv_event_name"
                android:id="@+id/tv_user_name"
                android:textSize="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/tv_user_name"
                android:id="@+id/tv_date"
                android:textSize="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/tv_date"
                android:id="@+id/tv_time_detail"
                android:textSize="25dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time_detail"
                android:id="@+id/iv_receipt"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="4dp"
                android:background="#00cd9a"
                android:padding="12dp"
                android:layout_below="@+id/iv_receipt"
                android:layout_alignParentLeft="true"
                android:id="@+id/b_cancel"
                android:text="Cancel"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="4dp"
                android:background="#00cd9a"
                android:padding="12dp"
                android:layout_below="@+id/iv_receipt"
                android:layout_alignParentRight="true"
                android:id="@+id/b_approve"
                android:text="Approve"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
