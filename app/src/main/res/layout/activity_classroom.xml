<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asif.du_crs.Classroom">

    <ScrollView
        android:layout_marginTop="0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="#ffffff"
                android:layout_gravity="center">

            <TextView
                android:id="@+id/date"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/textinput_2"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:hint="Date"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="20dp" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/date"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:text="Select Type"
        android:gravity="center"
        android:maxLines="1"
        android:spinnerMode="dialog"
        android:textColor="#000000"
        android:textSize="10dp" />

    <Spinner
        android:id="@+id/select_type"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/date"
        android:layout_below="@+id/type"
        android:layout_marginTop="4dp"
        android:background="@drawable/textinput_2"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:ellipsize="end"
        android:gravity="center"
        android:hint="BY ROOM"
        android:maxLines="1"
        android:spinnerMode="dialog"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/room_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/select_type"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:text="Select Room"
        android:gravity="center"
        android:maxLines="1"
        android:spinnerMode="dialog"
        android:textColor="#000000"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/select_room"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/date"
        android:layout_below="@+id/room_text"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textinput_2"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Select Room"
        android:maxLines="1"
        android:spinnerMode="dialog"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/stime_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/select_room"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:text="Select Start Time"
        android:gravity="center"
        android:maxLines="1"
        android:spinnerMode="dialog"
        android:textColor="#000000"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/select_start"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/date"
        android:layout_below="@+id/time_text"
        android:layout_marginTop="4dp"
        android:background="@drawable/textinput_2"
        android:ellipsize="end"
        android:gravity="center"
        android:hint="8.30 AM"
        android:layout_gravity="center"
        android:maxLines="1"
        android:spinnerMode="dialog"
        android:textColor="#000000"
        android:textSize="20dp" />

        <TextView
            android:id="@+id/etime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/select_room"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:text="Select Start Time"
            android:gravity="center"
            android:maxLines="1"
            android:spinnerMode="dialog"
            android:textColor="#000000"
            android:textSize="10dp" />

            <TextView
                android:id="@+id/etime"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/date"
                android:layout_below="@+id/time_text"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textinput_2"
                android:ellipsize="end"
                android:gravity="center"
                android:hint="8.30 AM"
                android:layout_gravity="center"
                android:maxLines="1"
                android:spinnerMode="dialog"
                android:textColor="#000000"
                android:textSize="20dp" />
            </LinearLayout>

    <Button
        android:id="@+id/check"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/select_start"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="@drawable/textinput"
        android:gravity="center"
        android:text="Check" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:visibility="visible"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:id="@+id/result"
        android:gravity="center"
        android:background="#ffffff"
        android:text=""
        android:textColor="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/book"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="102dp"
                    android:background="@drawable/textinput"
                    android:gravity="center"
                    android:text="Book" />


                <Button
                    android:id="@+id/list"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="31dp"
                    android:layout_toStartOf="@+id/book"
                    android:background="@drawable/textinput"
                    android:gravity="center"
                    android:text="List" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
